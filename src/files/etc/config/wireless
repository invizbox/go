config wifi-device 'radio0'
	option channel '11'
	option disabled '0'
	option htmode 'HT20'
	option hwmode '11g'
	option path 'pci0000:00/0000:00:00.0/0000:01:00.0'
	option type 'mac80211'

config wifi-iface 'lan'
	option device 'radio0'
	option encryption 'psk-mixed'
	option ifname 'ap0'
	option isolate '0'
	option key 'TOKENPASSWORD'
	option mode 'ap'
	option network 'lan'
	option ssid 'InvizBoxGo'

config wifi-iface 'wan'
	option device 'radio0'
	option disabled '1'
	option ifname 'eth0.2'
	option isolate '0'
	option mode 'sta'
	option network 'wan'
